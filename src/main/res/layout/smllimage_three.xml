<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/small_image"
        android:layout_width="100dp"
        app:layout_constraintRight_toLeftOf="@id/smll_image_title"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/smll_image_title"
        android:layout_width="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/small_image"
        android:textSize="18sp"
        android:lines="2"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/small_image_type"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        app:layout_constraintLeft_toRightOf="@id/small_image"
        android:textColor="#708090"
        android:layout_marginLeft="5dp"
        app:layout_constraintBottom_toBottomOf="@id/small_image"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>